<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/BOGOTA"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".Cities">

    <android.support.v7.widget.GridLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/Cali" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="match_parent"
            android:layout_height="177dp"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/Medellin" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="match_parent"
            android:layout_height="171dp"
            app:layout_column="0"
            app:layout_row="3"
            app:srcCompat="@drawable/facatativa" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="match_parent"
            android:layout_height="201dp"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="0"
            app:srcCompat="@drawable/Bogota" />

        <TextView
            android:id="@+id/TextFac"
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Facatativá"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="3" />

        <TextView
            android:id="@+id/textCal"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Cali"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="1" />

        <TextView
            android:id="@+id/textBog"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Bogotá"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textMed"
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Medellín"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="2" />

    </android.support.v7.widget.GridLayout>
</android.support.constraint.ConstraintLayout>